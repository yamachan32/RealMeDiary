<div class="wrapper">

  <div class="sub-wrapper">
    <div class="side-bar">
      <%= render "shared/side_bar" %>
    </div>

    <div class="main-bar">
      <div class="error-bar">
          <% if flash[:notice] %>
          <p><%= flash[:notice] %></p>
          <% end %>
      </div>

      <% if user_signed_in? %>
        <div class="main-icon">
          <% if @diary_count<1 %>
            <%= link_to new_diary_path, class:"link" do %>
              <%= image_tag 'icon_pen.png' , size: '80x80' %>
              <div class="icon-message">今日の日記を書く</div>
            <% end %>
          <% end %>
        </div>

        <div class="main-title">
          MyPage
        </div>

        <div class="calendar">
          <%= month_calendar attribute: :diary_date, events: @diaries do |date, diaries| %>
            <%= date.day %>

            <% diaries.each do |diary| %>
              <div class="diary-title">
                <%= link_to diary.title, diary_path(diary), class:"link" %>
              </div>
            <% end %>
          <% end %>
        </div>

      <% end %>
    </div>
  </div>

</div>
